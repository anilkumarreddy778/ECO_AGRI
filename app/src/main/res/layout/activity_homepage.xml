<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="steedserv.com.eco_agri.homepage"
    android:id="@+id/iconss"
    >

    <Toolbar
        android:id="@+id/hometoolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        tools:targetApi="lollipop"
        android:backgroundTint="@color/colorblack">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Home"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:gravity="center" />
</LinearLayout>


    </Toolbar>

    <ScrollView
        android:id="@+id/scrolling"
        android:layout_below="@+id/hometoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorlighgry">
    <LinearLayout
        android:layout_below="@+id/hometoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:layout_weight="1">

            <Button
                android:onClick="goToMembersdetails"
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/man1"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="Members"
                android:textColor="#030303"
                android:layout_marginRight="2dp"/>


            <Button
                android:onClick="goToShareHoldersDetails"
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/money6"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="shares"
                android:textColor="#030303" />
                <!--android:background="@drawable/border_circle"/>-->
        </LinearLayout>


        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">


            <Button
                android:onClick="goToAnimalsDetails"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/cow3"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:shadowColor="@color/colorPrimary"
                android:text="Cattles"
                android:textColor="#030303"
                android:layout_marginRight="2dp"/>

            <!--android:background="@drawable/border_circle"/>-->

            <Button
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/milk4"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="milk"
                android:textColor="#030303" />
            <!--android:background="@drawable/border_curved_shape"/>-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">


            <Button
                android:onClick="goDailyWagesdetails"
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/money6"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="Daily wages"
                android:textColor="#030303"
                android:layout_marginRight="2dp"/>


            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/sheep10"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="sheeps"
                android:textColor="#030303" />
                <!--android:background="@drawable/border_curved_shape"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">


            <Button
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/home2"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="shed"
                android:textColor="#030303"
                android:layout_marginRight="2dp"/>
            <!--android:background="@drawable/border_curved_shape"-->


            <Button

                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/workman7"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="workman"
                android:textColor="#030303" />
            <!--android:background="@drawable/border_curved_shape"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">


            <Button
                android:layout_weight="1"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/hen5"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="chicken"
                android:textColor="#030303"
                android:layout_marginRight="2dp"/>
            <!--android:background="@drawable/border_curved_shape"-->


            <Button
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:drawableTop="@drawable/sheep11"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:text="sheeps"
                android:textColor="#030303" />
            <!--android:background="@drawable/border_curved_shape"/>-->
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:layout_below="@+id/scrolling"
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:baselineAlignBottom="true"
        android:src="@drawable/cow" />
</RelativeLayout>
