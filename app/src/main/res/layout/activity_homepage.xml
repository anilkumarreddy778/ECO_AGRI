<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="steedserv.com.eco_agri.homepage"
    android:id="@+id/iconss">

    <Toolbar
        android:id="@+id/hometoolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        tools:targetApi="lollipop"
        android:backgroundTint="@color/colorblack"
        android:background="?android:attr/windowBackground">

        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:gravity="left"
                        android:text="Home"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textAlignment="gravity"
            android:textSize="18dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:baselineAlignBottom="true"
            android:src="@drawable/cow"
            android:background="@drawable/shape_liner_gradent"/>
    </Toolbar>
    <ScrollView
        android:id="@+id/scrolling"
        android:layout_below="@+id/hometoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorsky">
    <LinearLayout
        android:layout_below="@+id/hometoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <ImageButton
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:id="@+id/butt1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/homecow"
                android:background="@drawable/border_curved_shape"
                android:paddingRight="10dp"
                android:layout_gravity="center"/>

            <ImageButton
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/homecow"
                android:layout_gravity="center"
                android:background="@drawable/border_curved_shape"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <ImageButton
                android:onClick="goToAnimalsDetails"
                android:id="@+id/animals"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/homecow"
                android:layout_gravity="center"
                android:background="@drawable/border_curved_shape"/>

            <ImageButton
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/homecow"
                android:layout_gravity="center"
                android:background="@drawable/border_curved_shape"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp">

            <ImageButton
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:background="@drawable/border_curved_shape"
                android:src="@drawable/homecow" />

            <ImageButton
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/homehome"
                android:layout_gravity="center"
                android:background="@drawable/border_curved_shape"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:layout_below="@+id/scrolling"
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />
</RelativeLayout>
