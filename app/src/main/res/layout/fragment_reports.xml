<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="steedserv.com.eco_agri.frag_reports">
    <!--tools:context="steedserv.com.eco_agri.reports_Fragment"-->
    <!--android:background="@drawable/backgroudgradi">-->
    <LinearLayout
        android:id="@+id/child"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="5">

        <EditText
            android:id="@+id/rptfromdate"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24/02/2019"
            android:gravity="center"
            android:focusable="false"
            android:focusableInTouchMode="true"/>
        <EditText
            android:id="@+id/rpttodate"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24/02/2019"
            android:focusable="false"
            android:gravity="center"
            android:focusableInTouchMode="true"/>
        <Button
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="Get"
            android:textColor="@color/colorwhite"
            android:background="@color/colorlight"/>


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_below="@+id/child"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorlighgry"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/simpleTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tabBackground="@android:color/white"
        app:tabIndicatorColor="#f00"
        app:tabSelectedTextColor="@color/colorblue"
        app:tabTextColor="@color/colorlighgry"
        />
    <!--<View-->
        <!--android:id="@+id/view2"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginStart="25dp"-->
        <!--android:layout_marginEnd="25dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/colorlighgry"/>-->
    <android.support.v4.view.ViewPager
        android:layout_marginTop="35dp"
        android:id="@+id/simpleViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</RelativeLayout>
