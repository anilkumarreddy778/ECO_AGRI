<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="steedserv.com.eco_agri.members_details">
    <Toolbar
        android:id="@+id/memeberstoolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        tools:targetApi="lollipop"
        android:background="@color/colorblacklight">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:onClick="goBackToHomepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="-5dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_back_arrow"/>
    <TextView
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Memebers Details"
        android:textColor="@color/colorwhite"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textSize="18dp"/>
</LinearLayout>

    </Toolbar>

    <ImageButton
        android:onClick="goToAddMemebersDetails"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:baselineAlignBottom="true"
        android:src="@drawable/ic_action_add"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@color/colorblacklight"/>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/memeberstoolbar"
        android:id="@+id/member_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"/>

</RelativeLayout>
