<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="steedserv.com.eco_agri.Shares_details">
    <Toolbar
        android:id="@+id/sharestoolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        tools:targetApi="lollipop"
        android:background="@color/cardview_dark_background">

        <TextView
            android:layout_width="270dp"
            android:layout_height="45dp"
            android:gravity="left"
            android:text="Shares Details"
            android:textColor="@color/lightwhite"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textAlignment="gravity"
            android:textSize="18dp"/>
    </Toolbar>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:baselineAlignBottom="true"
        android:gravity="left"
        android:src="@drawable/ic_action_add"
        android:background="@color/cardview_dark_background"/>

    <LinearLayout
        android:layout_below="@+id/sharestoolbar"
        android:id="@+id/mycard"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="@color/lightwhite">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Credit"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="4500"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp">
            <TextView
                android:textSize="25sp"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:text="Debit"
                android:textAlignment="center"
                android:background="@drawable/shape_u_curve"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:text="Total"
                android:textSize="25sp"
                android:textAlignment="center"
                android:background="@drawable/shape_u_curve"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/mycard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ScrollView>
</RelativeLayout>
