<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbase"
    tools:context="steedserv.com.eco_agri.add_investers_details">
    <Toolbar
        android:id="@+id/addsharestoolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        tools:targetApi="lollipop"
        android:background="@color/cardview_dark_background">
<ImageView
    android:onClick="goBackToSharesDetails"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_action_back_arrow"/>

    </Toolbar>

<LinearLayout
    android:layout_below="@+id/addsharestoolbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:autofillHints="Select ID">
    </Spinner>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:numeric="decimal"
        android:textColorHighlight="@color/colorblack"
        android:textColorHint="@color/colorlighgry"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date"
        android:textColorHighlight="@color/colorblack"
        android:textColorHint="@color/colorlighgry"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description..."
        android:textColorHighlight="@color/colorblack"
        android:textColorHint="@color/colorlighgry"/>
    <Button
        android:onClick="goBackToSharesDetails"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="invest"/>
</LinearLayout>

    <TextView
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:text="Add Shares"
        android:textAlignment="center"
        android:textColor="@color/lightwhite"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="18dp" />

</RelativeLayout>