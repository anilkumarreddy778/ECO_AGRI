<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_u_curve">


            <LinearLayout
                android:id="@+id/viewOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:background="@drawable/shape_curve_popup_3">
                <LinearLayout
                    android:id="@+id/firsthalf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/sinvestclose"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_action_close"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorlightred" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34dp"
                        android:layout_marginRight="3dp"
                        android:textSize="16sp"
                        android:text="Date"
                        android:textColor="@color/colorblack"/>
                    <EditText
                        android:id="@+id/addtakesdate"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:hint="Select Date"
                        android:editable="false"
                        android:padding="10dp"
                        android:maxLines="1"
                        android:background="@drawable/border_circle"
                        android:textColorHint="@color/colorlight"
                        android:theme="@style/TextLabe2" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34dp"
                        android:layout_marginRight="3dp"
                        android:textSize="16sp"
                        android:text="Amount"
                        android:textColor="@color/colorblack"/>
                    <EditText
                        android:id="@+id/addsinvest"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:hint="Enter Amount"
                        android:padding="10dp"
                        android:numeric="integer"
                        android:maxLines="1"
                        android:background="@drawable/border_circle"
                        android:textColorHint="@color/colorlight"
                        android:theme="@style/TextLabe2" />




                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:layout_marginBottom="25dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="3dp"
                    android:textSize="16sp"
                    android:text="Transection Type"
                    android:textColor="@color/colorblack"/>
                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="2"
                    android:gravity="center">
                    <RadioGroup
                        android:id="@+id/groupRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="30dp"
                        android:orientation="horizontal"
                        android:padding="8sp"
                        android:background="@drawable/border_circle">

                        <RadioButton
                            android:id="@+id/radioincome"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Invest"
                            android:textColor="@color/colorblack"/>
                        <RadioButton
                            android:id="@+id/radioexpanse"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Takeout"
                            android:textColor="@color/colorblack"/>
                    </RadioGroup>
                </LinearLayout>
                <!--android:background="@android:color/holo_orange_light"-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:text="Description"
                    android:textColor="@color/colorblack"/>
                <EditText
                    android:id="@+id/addsdescr"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_circle"
                    android:hint="Enter Descrip..."
                    android:textSize="20sp"
                    android:padding="10sp"
                    android:maxLines="3"
                    android:textColorHint="@color/colorlight"
                    android:theme="@style/TextLabe2" />

            </LinearLayout>

        </LinearLayout>
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Add"
            android:elevation="16dp"
            android:textSize="18dp"
            android:textColor="@color/colorwhite"
            app:layout_anchor="@id/addtakoutsinvst"
            app:layout_anchorGravity="center"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addtakoutsinvst"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:tooltipText="@string/app_name"
            app:layout_anchor="@id/viewOne"
            android:layout_marginRight="10dp"
            app:layout_anchorGravity="bottom|right|end"
            app:backgroundTint="@color/colorgreen"
            app:rippleColor="#FFF"/>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>