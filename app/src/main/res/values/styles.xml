<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorblack</item>
        <item name="colorPrimaryDark">@color/colorblack</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="textColorHint">@color/textcolorr</item>-->
        <!--<item name="textColorHighlight">@color/colorwhite</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorwhite</item>//on bellow
        <item name="colorPrimaryDark">@color/colorblacktransper</item>//on top
        <item name="colorAccent">@color/colorblue</item> //calenders color
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textColorPrimary">@color/colorblack</item>
        <!--<item name="textColorHint">@color/clorwhite</item>-->
        <!--<item name="textColorHighlight">@color/colorwhite</item>-->

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextLabel" parent="TextAppearance.AppCompat">

        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#463627</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorsky</item>
        <item name="colorControlNormal">#6e6d70</item>
        <item name="colorControlActivated">#7f674b</item>
    </style>

    <style name="TextLabe" parent="TextAppearance.AppCompat">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">#463627</item>
    <item name="android:textSize">20sp</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorAccent">@color/colorsky</item>
    <item name="colorControlNormal">#6e6d70</item>

    <item name="colorControlActivated">#7f674b</item>
    </style>



    <style name="TextLabe2" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorsky</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionModeOverlay">@color/colorlighgry</item>
        <item name="colorControlHighlight">@color/colorgreen</item>
        <item name="android:textColorHint">@color/pp</item>//befor teching text
        <item name="colorControlNormal">@color/pp</item>//under-line color
        <item name="colorControlActivated">#CF983D</item>//when user click on

    </style>

    <style name="TextLabe3" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->

        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorsky</item>
        <item name="android:textColorHint">@color/colorsky_dark</item>//befor teching text
        <item name="colorControlNormal">@color/colorblacklight</item>//under-line color
        <item name="colorControlActivated">@color/colorblacklight</item>//when user click on
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MaterialAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/colorgreen</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/colorblack</item>

    </style>
</resources>
